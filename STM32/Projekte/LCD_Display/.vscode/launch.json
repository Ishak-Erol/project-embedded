{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug STM32F100RB (OpenOCD)",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/LCD_Display.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "STM32F100RB",
            "interface": "swd",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "runToEntryPoint": "main",
            "svdFile": "${workspaceFolder}/STM32F100.svd",
            "configFiles": [
                "/usr/share/openocd/scripts/interface/stlink.cfg",
                "/usr/share/openocd/scripts/target/stm32f1x.cfg"
            ],
            "preLaunchCommands": [
                "set mem inaccessible-by-default off",
                "monitor reset"
            ],
            "postLaunchCommands": [
                "monitor reset init",
                "monitor sleep 200"
            ]
        }
    ]
}
