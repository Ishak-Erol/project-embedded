{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build STM32 Project",
            "type": "shell",
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/SPI_Loopback"  // Pfad zum Makefile
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean STM32 Project",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}/SPI_Loopback"
            },
            "group": "build"
        }
    ]
}
